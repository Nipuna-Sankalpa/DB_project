{# empty Twig template #}
{% extends "::base.html.twig"%}

{% block styleSheet%}<link href="{{asset('css/profileCustom.css')}}" rel="stylesheet">{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3">

            <div id="image">

                <img src="{{imgPath}}" alt="Profile Picture" class="profilePicFrame img-rounded">

            </div>

            <div id="navBox" style="margin-top: 1em;">
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-info">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    View Profile
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                            <div class="panel-body">
                                <ul>
                                    <li>My Posts</li>
                                    <li><a href="{{ path('profile', { 'email': profile.email }) }}">Friends</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-info">
                        <div class="panel-heading" role="tab" id="headingTwo">
                            <h4 class="panel-title">
                                <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    Setup Profile
                                </a>
                            </h4>
                        </div>
                        <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                            <div class="panel-body">
                                <ul>
                                    <li><a href="{{ path('profile_edit', { 'email': profile.email }) }}">Edit profile</a></li>
                                    
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!--*************************************************************************************************-->


        <div class="col-md-9">
            <h2>{{profile.firstName}} {{profile.lastName}}</h2>

            <div class="panel-body">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#personalSection">Personal</a></li>
                    <li><a data-toggle="tab" href="#educationSection">Education</a></li>
                    <li><a data-toggle="tab" href="#workSection">About me</a></li>

                </ul>
                <div class="tab-content">
                    <div id="personalSection" class="tab-pane fade in active">
                        <br />
                        <dl class="dl-horizontal">
                            <dt><span class="glyphicon glyphicon-envelope"></span> E-mail :</dt>
                            <dd>{{profile.email}}</dd>
                            <dt><span class="glyphicon glyphicon-star" ></span> Date of Birth :</dt>
                            <dd>{{profile.dob}}</dd>
                            <dt><span class="glyphicon glyphicon-star" ></span> Gender :</dt>
                            <dd>{{profile.gender}}</dd>
                            <dt><span class="glyphicon glyphicon-star" ></span> Religion :</dt>
                            <dd>{{profile.religion}}</dd>

                            <dt><span class="glyphicon glyphicon-home" ></span> Home Address :</dt>
                            <dd>{{profile.streetNumber}}</dd>
                            <dd>{{profile.street}}</dd>
                            <dd>{{profile.hometown}}</dd>
                            <dt><span class="glyphicon glyphicon-home" ></span> Country :</dt>
                            <dd>{{profile.country}}</dd>
                            <dt><span class="glyphicon glyphicon-home" ></span> Lives in :</dt>
                            <dd>{{profile.city}}</dd>
                            <dt><span class="glyphicon glyphicon-heart" ></span> Relationship Status :</dt>
                            <dd>{{profile.relationshipStatus}}</dd>
                        </dl>
                        <br />
                    </div>
                    <div id="educationSection" class="tab-pane fade">
                        <dl class="dl-horizontal">
                            <dt><span class="glyphicon glyphicon-blackboard"></span> School  :</dt>
                            <dd>{{profile.school}}</dd>
                            <dt><span class="glyphicon glyphicon-education"></span> High School :</dt>
                            <dd>{{profile.higherEducation}}</dd>
                            <dt><span class="glyphicon glyphicon-user"></span> Description  :</dt>
                            <dd>{{profile.description}}</dd>
                            <dt><span class="glyphicon glyphicon-phone"></span> Mobile Number  :</dt>
                            <dd>{{profile.mobileNumber}}</dd>
                            <dt><span class="glyphicon glyphicon-phone-alt"></span> Home Number  :</dt>
                            <dd>{{profile.homePhone}}</dd>
                            <dt><span class="glyphicon glyphicon-bookmark"></span> Blog  :</dt>
                            <dd>{{profile.blog}}</dd>
                            <dt><span class="glyphicon glyphicon-bookmark"></span> linked In  :</dt>
                            <dd>{{profile.higherEducation}}</dd>
                            <dt><span class="glyphicon glyphicon-knight"></span> Sports  :</dt>
                            <dd>{{profile.favoriteSport}}</dd>
                            <dt><span class="glyphicon glyphicon-expand"></span> Movie  :</dt>
                            <dd>{{profile.favoriteSport}}</dd>
                            <dt><span class="glyphicon glyphicon-book"></span> Book  :</dt>
                            <dd>{{profile.favoriteSport}}</dd>
                            <dt><span class="glyphicon glyphicon-apple"></span> Food  :</dt>
                            <dd>{{profile.favoriteFood}}</dd>
                            <dt><span class="glyphicon glyphicon-headphones"></span> Song  :</dt>
                            <dd>{{profile.favoriteSong}}</dd>
                            <dt><span class="glyphicon glyphicon-glass"></span> Drink  :</dt>
                            <dd>{{profile.favoriteDrink}}</dd>

                        </dl>

                    </div>
                    <div id="workSection" class="tab-pane fade">
                        <p></p>
                    </div>
                </div>
            </div>


        </div>
    </div>

{% endblock %}
